<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="86dp">

    <View
        android:id="@+id/emailBox6"
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:background="@drawable/rectangle_4_shape"
        app:layout_constraintBottom_toTopOf="@+id/PhoneNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailBox5" />

    <EditText
        android:id="@+id/password"

        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/emailBox"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Password (longer than 6)"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/PhoneNum"
        app:layout_constraintEnd_toEndOf="@+id/emailBox3"
        app:layout_constraintStart_toStartOf="@+id/emailBox3" />

    <View
        android:id="@+id/emailBox5"
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:background="@drawable/rectangle_4_shape"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailBox4" />

    <EditText
        android:id="@+id/email"

        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/emailBox"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="@+id/emailBox5"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/emailBox5" />

    <View
        android:id="@+id/emailBox4"
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:background="@drawable/rectangle_4_shape"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1434"
        app:layout_constraintVertical_bias="0.781" />

    <EditText
        android:id="@+id/username"

        android:layout_width="320dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/emailBox4"
        app:layout_constraintEnd_toEndOf="@+id/emailBox3"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/emailBox3" />

    <View
        android:id="@+id/rectangle_1434"
        android:layout_width="442dp"
        android:layout_height="88dp"
        android:background="@drawable/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle_1434"
        android:layout_marginBottom="660dp"
        android:text="together"
        android:textColor="#Fff6ea"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logo_png__1__2" />

    <ImageView
        android:id="@+id/logo_png__1__2"
        android:layout_width="126dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-26dp"
        android:contentDescription="logo_png__1__2"
        android:src="@drawable/logofinal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1434"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/PhoneNum"

        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_marginBottom="240dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/emailBox3"
        app:layout_constraintStart_toStartOf="@+id/emailBox3" />

    <View
        android:id="@+id/emailBox3"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_marginTop="44dp"
        android:background="@drawable/rectangle_4_shape"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailBox6"
        app:layout_constraintVertical_bias="0.348" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNum"
        app:layout_constraintVertical_bias="0.338"
        android:contentDescription="good"

        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/elderlysignup" />


</androidx.constraintlayout.widget.ConstraintLayout>